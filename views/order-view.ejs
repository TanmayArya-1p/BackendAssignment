<!DOCTYPE html>
<html>
<head>
    <title>InOrder - Order <%= order.id %></title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <link rel="stylesheet" href="/stylesheets/style.css">  
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100..900;1,100..900&family=Ubuntu:ital,wght@0,300;0,400;0,500;0,700;1,300;1,400;1,500;1,700&display=swap" rel="stylesheet">
    <script src="/javascripts/refresh.js" defer></script>
    <script defer>
        ctrMap = {}
        price = 0
        priceIndex = {}

        async function initPriceIndex() {
            let res = await fetch('/api/items');
            res = await res.json();
            res.forEach(item => {
                priceIndex[item.id] = item.price;
            });
        }
        initPriceIndex();


        function changeCounter(itemid, incr) {
            let cntr = document.getElementById(`ctr-${itemid}`)
            let curr = Number(cntr.innerText.trim())
            price -= curr*priceIndex[itemid]
            if(incr) {
                cntr.innerText = String(curr+1) 
            } else {
                cntr.innerText = String(Math.max(curr-1,0)) 
            }
            ctrMap[itemid] = Number(cntr.innerText)
            price += ctrMap[itemid]*priceIndex[itemid]
            document.getElementById('addedPrice').innerText = price
        }

        async function addItemsHandler() {
            let orderId = window.location.pathname.split('/');
            orderId = orderId[orderId.length - 1];
            for(let itemid in ctrMap) {
                if(ctrMap[itemid] > 0) {
                    let curr = {
                        item_id: itemid,
                        quantity: ctrMap[itemid],
                        instructions: document.getElementById(`instructions-${itemid}`).value.trim()
                    };
                    await fetch(`/api/orders/${orderId}/items`, {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify(curr)
                    })
                }
            }
            window.location.reload()
        }

        function logoutHandler() {
            fetch('/api/auth/logout', {
                method: 'POST',
            })
            .then(res => {
                if (res.status === 200) {
                    window.location.href = '/';
                } else {
                    alert('Logout failed');
                }
            })
        }
    </script>
</head>
<body>
    <nav class="flex items-center flex-row justify-between py-2 px-4 border-b-2 border-b-gray-500">
        <a class="text-3xl font-thin ubuntu-regular text-center align-middle" href="/home">InOrder</a>
        <div class="flex flex-row gap-6 justify-center items-center">
            <h1 class="text-xl ubuntu-bold"><%= user.username %></h1>
            <button class="sbutton h-12 cursor-pointer" onclick="logoutHandler()">Logout</button>
        </div>

    </nav>

    <div id="page-container" class="mt-8 ml-8 mb-30">

        <div class="ubuntu-bold text-4xl">Order #<%= order.id %>  ( <span class=<%= `text-${orderColourMap[order.status]}` %> ><%= order.status %></span>  ) </div>
        <div class="ubuntu-regular text-xl mt-4">
            Ordered at Table #<%= order.table_no %> on <%= new Date(order.issued_at).toLocaleString() %>
        </div>
        <div class="ubuntu-bold text-3xl mt-12">Current Bill</div>



        <div class="relative overflow-x-auto mt-4 w-fit bg-white rounded-xl shadow-md border">
            <table class="w-fit bg-white p-2">
                <thead class="text-xl ubuntu-bold">
                    <tr>
                        <th scope="col" class="px-6 py-3 text-left">
                            Item
                        </th>
                        <th scope="col" class="px-6 py-3">
                            Quantity
                        </th>
                        <th scope="col" class="px-6 py-3">
                            Price per Item
                        </th>
                        <th scope="col" class="px-6 py-3">
                            Total Price
                        </th>
                        <th scope="col" class="px-6 py-3">
                            Status
                        </th>
                    </tr>
                </thead>
                <tbody class="text-xl text-center">
                    <% let total = 0; %>
                    <% for(let i=0; i<order.ordered_items.length ; i++) { %>
                        <tr class="bg-white border-b">
                            <td class="px-6 py-4 text-left">
                                <%= order.ordered_items[i].item.name %>
                            </td>
                            <td class="px-6 py-4">
                                <%= order.ordered_items[i].quantity %>
                            </td>
                            <td class="px-6 py-4">
                                ₹<%= order.ordered_items[i].item.price %>
                            </td>
                            <td class="px-6 py-4">
                                ₹<%= order.ordered_items[i].price%>
                            </td>
                            <td class="px-6 py-4">
                                <span class=<%= `text-${orderColourMap[order.ordered_items[i].status]}` %> >
                                    <%= order.ordered_items[i].status %>
                                </span>
                            </td>
                        </tr>
                        <% total += order.ordered_items[i].price; %>
                    <% } %>
                    <tr class="bg-gray-100 font-bold">
                        <td></td>
                        <td></td>
                        <td class="px-6 py-4 text-right">Total</td>
                        <td class="px-6 py-4">₹<%= total %></td>
                        <td></td>
                    </tr>
                </tbody>
            </table>
        </div>

        <div class="ubuntu-bold text-3xl mt-12">Add more Items</div>

        <div id="item-selector" class="flex flex-row flex-wrap gap-4 mt-4 overflow-auto p-2 border rounded-xl w-[70%]" style="max-height: 32rem;">
            <% for(let i=0; i<items.length ; i++) { %>
                <div href=<%= `/items/${items[i].id}` %>  class="item-card" style="width:30rem">
                    <img src="<%= items[i].image %>" style="height: 6rem; width: auto;">
                    <div class="flex flex-col justify-between h-full">
                        <div class="flex flex-row gap-5 justify-between">
                            <div>
                                <h2 class="text-lg font-bold ubuntu-bold"><%= items[i].name %></h2>
                                <p class="mt-2 text-gray-500"><%= items[i].description %></p>
                                <p class="mt-2 text-gray-800">Price: ₹<%= items[i].price %></p>

                            </div>
                            <div class="flex flex-col align-middle justify-center ubuntu-bold text-2xl">
                                <button onclick=<%= `changeCounter(${items[i].id},true)`  %>  id=<%= `incr-${items[i].id}` %> class="bg-amber-50 p-1.5 rounded-t-xl border border-gray-500 cursor-pointer">
                                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
                                    </svg>
                                </button>
                                <div id=<%= `ctr-${items[i].id}` %> class="bg-white  p-1.5 border-l border-r align-middle flex justify-center items-center border-gray-500">
                                    0
                                </div>
                                <button onclick=<%= `changeCounter(${items[i].id},false)` %>  id=<%= `decr-${items[i].id}` %> class="bg-amber-50  p-1.5 rounded-b-xl border border-gray-500 cursor-pointer">
                                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M5 12h14" />
                                    </svg>
                                </button>
                                
                            </div>
                        </div>
                        <div id="tags" class="flex flex-row flex-wrap gap-2">
                            <% for(let j=0; j<items[i].tags.length ; j++) { %>
                                <span class="tag"><%= items[i].tags[j][1] %></span>
                            <% } %>
                        </div>
                        <input type="text" id=<%= `instructions-${items[i].id}` %> placeholder="Instructions" class="border p-2 rounded w-2rem mt-2">

                    </div>
                    
                </div>
            <% } %>
        </div>
        <div class="flex flex-row gap-4 items-center mt-8">
            <div class="ubuntu-bold text-3xl flex items-center justify-center text-center">
                Price of Added Items:  ₹<span id="addedPrice">0</span>
            </div>
            <button onclick="addItemsHandler()" class="sbutton text-2xl w-fit flex flex-row gap-4">
                Add Items
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512" style="width: 1.4rem;"><!--!Font Awesome Free 6.7.2 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2025 Fonticons, Inc.--><path d="M416 0C400 0 288 32 288 176l0 112c0 35.3 28.7 64 64 64l32 0 0 128c0 17.7 14.3 32 32 32s32-14.3 32-32l0-128 0-112 0-208c0-17.7-14.3-32-32-32zM64 16C64 7.8 57.9 1 49.7 .1S34.2 4.6 32.4 12.5L2.1 148.8C.7 155.1 0 161.5 0 167.9c0 45.9 35.1 83.6 80 87.7L80 480c0 17.7 14.3 32 32 32s32-14.3 32-32l0-224.4c44.9-4.1 80-41.8 80-87.7c0-6.4-.7-12.8-2.1-19.1L191.6 12.5c-1.8-8-9.3-13.3-17.4-12.4S160 7.8 160 16l0 134.2c0 5.4-4.4 9.8-9.8 9.8c-5.1 0-9.3-3.9-9.8-9L127.9 14.6C127.2 6.3 120.3 0 112 0s-15.2 6.3-15.9 14.6L83.7 151c-.5 5.1-4.7 9-9.8 9c-5.4 0-9.8-4.4-9.8-9.8L64 16zm48.3 152l-.3 0-.3 0 .3-.7 .3 .7z"/></svg>
            </button>
        </div>


    </div>

</body>
</html>